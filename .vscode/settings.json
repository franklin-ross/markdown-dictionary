{
  "editor.formatOnSave": true,
  "editor.rulers": [80],
  "editor.renderWhitespace": "all",
  "editor.trimAutoWhitespace": true,
  "[json][jsonc][javascript][typescript][javascriptreact][typescriptreact][html][handlebars]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript][typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always",
      "source.organizeImports": "always"
    }
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, .gitignore, .npmignore, tsconfig.json, *.csproj, Directory.Build.*, Directory.Packages.props, appsettings*.json, *.sln, .editorconfig, tailwind.config.js, .eslintrc.js, .prettierrc.js, .prettierrc.json",
    "appsettings.json": "appsettings.*.json"
  }
}
